    "colors": [
      {
        "id": "jagannath.sattva",
        "description": "Sattva (purity) color - hints and info",
        "defaults": { "dark": "#7EE787", "light": "#28A745" }
      },
      {
        "id": "jagannath.rajas",
        "description": "Rajas (activity) color - warnings",
        "defaults": { "dark": "#FFA657", "light": "#D97706" }
      },
      {
        "id": "jagannath.tamas",
        "description": "Tamas (darkness) color - errors",
