{
  "name": "jagannath",
  "displayName": "Jagannath Language",
  "description": "üïâÔ∏è Sanskrit-inspired systems programming language with Hindu philosophy integration",
  "version": "1.0.0",
  "publisher": "jagannath-lang",
  "icon": "images/jagannath-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jagannath-lang/jagannath"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters",
    "Visualization",
    "Themes"
  ],
  "keywords": [
    "jagannath",
    "sanskrit",
    "systems programming",
    "hindu philosophy",
    "vedic",
    "compiler"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jagannath",
        "aliases": ["Jagannath", "jagannath", "jag"],
        "extensions": [".jag", ".jagannath"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/jag-icon-light.svg",
          "dark": "./images/jag-icon-dark.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "jagannath",
        "scopeName": "source.jagannath",
        "path": "./syntaxes/jagannath.tmLanguage.json"
      }
    ],
    "semanticTokenTypes": [
      {
        "id": "karaka",
        "description": "Sanskrit semantic case markers [kart·πõ], [karman]"
      },
      {
        "id": "astra",
        "description": "Divine weapons - optimization passes"
      },
      {
        "id": "naraka",
        "description": "Hell types - error classifications"
      },
      {
        "id": "guna",
        "description": "Quality levels - sattva/rajas/tamas"
      },
      {
        "id": "kosha",
        "description": "Sheaths - memory allocation regions"
      },
      {
        "id": "chakra",
        "description": "Energy centers - software layers"
      },
      {
        "id": "varna",
        "description": "Privilege rings"
      },
      {
        "id": "marga",
        "description": "Paths - optimization strategies"
      },
      {
        "id": "mantra",
        "description": "Sacred invocations"
      },
      {
        "id": "lifetime",
        "description": "Region-based lifetime annotations"
      }
    ],
    "semanticTokenModifiers": [
      {
        "id": "mutable",
        "description": "Mutable binding (-ƒÅ affix)"
      },
      {
        "id": "immutable",
        "description": "Immutable binding (-a affix)"
      },
      {
        "id": "linear",
        "description": "Linear ownership (-l affix)"
      },
      {
        "id": "borrowed",
        "description": "Borrowed reference (-b affix)"
      },
      {
        "id": "threadsafe",
        "description": "Thread-safe (-s≈´tra affix)"
      },
      {
        "id": "secure",
        "description": "Security boundary (-vaitara·πáƒ´ affix)"
      },
      {
        "id": "sattva",
        "description": "Pure quality level"
      },
      {
        "id": "rajas",
        "description": "Active quality level"
      },
      {
        "id": "tamas",
        "description": "Dark quality level"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "jagannath",
        "scopes": {
          "karaka": ["support.type.karaka.jagannath"],
          "astra": ["entity.name.class.astra.jagannath"],
          "naraka": ["invalid.illegal.naraka.jagannath"],
          "guna": ["constant.language.guna.jagannath"],
          "kosha": ["support.class.kosha.jagannath"],
          "chakra": ["markup.heading.chakra.jagannath"],
          "varna": ["storage.modifier.varna.jagannath"],
          "marga": ["entity.name.namespace.marga.jagannath"],
          "mantra": ["constant.language.mantra.jagannath"],
          "lifetime": ["storage.modifier.lifetime.jagannath"]
        }
      }
    ],
    "configuration": {
      "title": "Jagannath",
      "properties": {
        "jagannath.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the Jagannath language server"
        },
        "jagannath.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Format files on save"
        },
        "jagannath.guna": {
          "type": "string",
          "enum": ["sattva", "rajas", "tamas"],
          "enumDescriptions": [
            "‡§∏‡§§‡•ç‡§§‡•ç‡§µ - Purity: Maximum safety, debug info, slower",
            "‡§∞‡§ú‡§∏‡•ç - Activity: Balanced optimization (default)",
            "‡§§‡§Æ‡§∏‡•ç - Power: Maximum optimization, minimal checks"
          ],
          "default": "rajas",
          "description": "Compilation optimization mode (Gu·πáa)"
        },
        "jagannath.marga": {
          "type": "string",
          "enum": ["karma", "jnana", "bhakti", "raja"],
          "enumDescriptions": [
            "‡§ï‡§∞‡•ç‡§Æ - Action: Optimize imperative/stateful code",
            "‡§ú‡•ç‡§û‡§æ‡§® - Knowledge: Optimize functional/pure code",
            "‡§≠‡§ï‡•ç‡§§‡§ø - Devotion: Domain-specific optimizations",
            "‡§∞‡§æ‡§ú - Royal: Balanced hybrid approach"
          ],
          "default": "raja",
          "description": "Optimization strategy path (MƒÅrga)"
        },
        "jagannath.showKoshaIndicators": {
          "type": "boolean",
          "default": true,
          "description": "Show memory allocation region (Ko≈õa) indicators"
        },
        "jagannath.enableAstraHints": {
          "type": "boolean",
          "default": true,
          "description": "Show Astra (optimization) hints in code"
        },
        "jagannath.showSanskritHover": {
          "type": "boolean",
          "default": true,
          "description": "Show Sanskrit etymology in hover tooltips"
        },
        "jagannath.diagnosticStyle": {
          "type": "string",
          "enum": ["modern", "traditional"],
          "default": "modern",
          "description": "Diagnostic message style"
        }
      }
    },
    "commands": [
      {
        "command": "jagannath.build",
        "title": "Jagannath: Build",
        "icon": "$(tools)"
      },
      {
        "command": "jagannath.run",
        "title": "Jagannath: Run",
        "icon": "$(play)"
      },
      {
        "command": "jagannath.format",
        "title": "Jagannath: Format Document",
        "icon": "$(edit)"
      },
      {
        "command": "jagannath.showAstViewer",
        "title": "Jagannath: Show AST Viewer",
        "icon": "$(symbol-structure)"
      },
      {
        "command": "jagannath.showPipeline",
        "title": "Jagannath: Show Compilation Pipeline",
        "icon": "$(git-merge)"
      },
      {
        "command": "jagannath.analyzeFunction",
        "title": "Jagannath: Analyze Function"
      },
      {
        "command": "jagannath.viewMemoryLayout",
        "title": "Jagannath: View Memory Layout"
      },
      {
        "command": "jagannath.viewAstraOptimization",
        "title": "Jagannath: View Astra Optimization"
      },
      {
        "command": "jagannath.viewNarakaClassification",
        "title": "Jagannath: View Naraka Classification"
      }
      ,
      {
        "command": "jagannath.invokeAstra",
        "title": "Jagannath: Invoke Astra (Deploy Optimization)",
        "icon": "$(rocket)"
      },
      {
        "command": "jagannath.yamaJudge",
        "title": "Jagannath: Yama Judge (Run Static Analysis)",
        "icon": "$(shield)"
      },
      {
        "command": "jagannath.selectMarga",
        "title": "Jagannath: Select MƒÅrga (Optimization Path)",
        "icon": "$(list-selection)"
      }
    ],
    "keybindings": [
      {
        "command": "jagannath.yamaJudge",
        "key": "ctrl+alt+y",
        "when": "editorTextFocus && resourceLangId == jagannath"
      },
      {
        "command": "jagannath.invokeAstra",
        "key": "ctrl+alt+a",
        "when": "editorTextFocus && resourceLangId == jagannath"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "jagannath.showAstViewer",
          "when": "resourceLangId == jagannath",
          "group": "navigation"
        },
        {
          "command": "jagannath.showPipeline",
          "when": "resourceLangId == jagannath",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "jagannath.analyzeFunction",
          "when": "resourceLangId == jagannath",
          "group": "jagannath@1"
        },
        {
          "command": "jagannath.build",
          "when": "resourceLangId == jagannath",
          "group": "jagannath@2"
        },
        {
          "command": "jagannath.run",
          "when": "resourceLangId == jagannath",
          "group": "jagannath@3"
        }
      ]
    },
    "snippets": [
      {
        "language": "jagannath",
        "path": "./snippets/jagannath.json"
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
